Logo.prototype.draw = function(){
    if(this.editing){
        this.draw = function() {
            
        };
        return;
    }
    imageMode(CENTER);
    background(this.bgColor);
   
    for(var i = 0, len = this.clouds.length; i < len; i ++){
        pushMatrix();
        translate(this.clouds[i][0], this.clouds[i][1]);
        scale(this.clouds[i][2]/35);
        image(this.cloudImg, 0, 0);
        
        this.clouds[i][0] += 0.2;
        if(this.clouds[i][0] > width + this.clouds[i][2]*40/2){
            this.clouds[i][0] = -this.clouds[0][2]*40/2 ;
        }
        popMatrix();
    }
    if(this.clouds.length < 10){
        this.newCloud(this.clouds);
    }
        
  
 for(var i = 200; i < 450; i++) {
  image(this.pirateImg,i,i+sin(frameCount*5)*3);   
 }
(fill)(this.bgColor, 200);
rect(0, 0, 400, 400);
    image(this.pirateImg, 200, 200+sin(frameCount*5)*3);
    
    
    
    
    textFont(createFont("Arial Bold"));
    textAlign(CENTER,CENTER);
    textSize(55);
    fill(0,0,0,50);
    
    text(this.message.substring(0, this.i), 205, 292);
    fill(0, 0, 0);
    
    text(this.message.substring(0, this.i), 200, 290);
    this.i += 0.1;
    if(this.i > this.message.length - 1) {
        this.fade ++;   
    }
    fill(0, 0, 0, this.fade);
    textSize(16);
    text("Productions", 255, 319);
    
    this.timer ++;
    if(this.timer > 350) {
        scene = "game";   
    }
};
var logo = new Logo(false);

draw = function() {
    if(scene === "logo"){
        logo.draw();
    }
    if(scene === "game") {
        background(logo.bgColor);
        textSize(50);
        text("Game Here",200,200);
    }

};
