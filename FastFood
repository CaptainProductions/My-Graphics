var bbq = function(x,y,size) {
                    pushMatrix();
    translate(x,y);
    scale(size);
    noStroke();  
    fill(255, 106, 0);
    (rect)(x,y,70,150,0,0,20,20);
         fill(0,0,0,50);
     (rect)(x+16,y,35,150,0,0,20,0);
    fill(230, 92, 0);
    rect(x,y-79,60,10);

     quad(x-5,y-115,x-10,y-83,x+10,y-83,x+5,y-115);
     fill(255, 106, 0);
     rect(x-19,y-79,7,10);
     fill(255);
     textFont(createFont("Trebuchet MS Bold"));
     textSize(28);
     text("BBQ",x-25,y);
     

    popMatrix();       
    
};
